.products
	display block
	&__list
		margin-right -(ratio-percentage(32,1210))
		font-size 0
		+below(425px)
			margin-right 0
	&__item
		border 2px solid #000000
		margin-right 39px
		margin-right ratio-percentage(36,1210)
		margin-bottom 25px
		width 270px
		width ratio-percentage(262,1210)
		// min-height 266px
		display inline-block
		vertical-align top
		+below(1024px)
			width 30.3%
		+below(768px)
			width 47%
		+below(425px)
			margin-right 0
			width 100%
	&__link
		display block
		text-decoration none
	&__img
		// min-height 155px
		text-align center
		img
			max-width 100%
			height auto
	&__item-title
		padding 4px 14px 4px
		min-height 68px
		background #000
		color #ffffff
		font-family $benderR
		font-size 20px
		line-height 35px
	&__item-price
		padding 4px 16px 3px
		background #FEB900
		color #000000
		font-family $benderB
		font-size 20px
		line-height 35px

	&__link
		&:hover
			.products__item-price
				background lighten(#FEB900, 10)


.products_category
	overflow hidden
	.products__list
		margin-right 0
	.products__item
		border none
		margin-right 85px
		margin-right ratio-percentage(70,1180)
		width 243px
		width ratio-percentage(222,1180)
		+below(768px)
			width 47%
			&:nth-child(2n)
					margin-right 0
		+below(425px)
			margin-right 0
			width auto
	.products__img
		position relative
		&:after
			position absolute
			right 0
			left 0
			bottom 0
			content ""
			height 3px
			background #000
	.products__item-title
		position relative
		border 3px solid #000000
		border-width 0 0 3px
		margin-right 25px
		margin-left 25px
		padding 8px 0 8px
		min-height auto
		background #feb900
		color #000000
		font-family $benderB
		font-size 22px
		line-height 1
		text-align center
		text-overflow ellipsis
		// overflow hidden

		&:after,
		&:before
			position absolute
			top 0
			content ""
		&:after
			right -22px
			width 0
			height 0
			border-style solid
			border-width 40px 25px 0 0
			border-color #feba00 transparent transparent transparent
		&:before
			left -22px
			width 0
			height 0
			border-style solid
			border-width 0 25px 40px 0
			border-color transparent  #feba00 transparent transparent

	.products__link
		position relative
		&:after,
		&:before
			position absolute
			bottom 0
			content ""
		&:after
			z-index -1
			right 0
			width 0
			height 0
			border-style solid
			border-width 42px 25px 0 0
			border-color #000 transparent transparent transparent
		&:before
			left 0
			width 0
			height 0
			border-style solid
			border-width 0 25px 42px 0
			border-color transparent  #000 transparent transparent
