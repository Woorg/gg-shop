.products
	display block
	&__list
		margin-right -(ratio-percentage(32,1210))
		font-size 0
		+below(425px)
			margin-right 0
	&__item
		border 2px solid #000000
		margin-right 39px
		margin-right ratio-percentage(36,1210)
		margin-bottom 25px
		width 270px
		width ratio-percentage(262,1210)
		// min-height 266px
		display inline-block
		vertical-align top
		+below(1024px)
			width 30.3%
		+below(768px)
			width 47%
		+below(425px)
			margin-right 0
			width 100%
	&__link
		display block
		text-decoration none
	&__img
		// min-height 155px
		text-align center
		img
			max-width 100%
			height auto
	&__item-title
		padding 4px 14px 4px
		min-height 68px
		background #000
		color #ffffff
		font-family $benderR
		font-size 20px
		line-height 35px
	&__item-price
		padding 4px 16px 3px
		background #FEB900
		color #000000
		font-family $benderB
		font-size 20px
		line-height 35px

	&__link
		&:hover
			.products__item-price
				background lighten(#FEB900, 10)



