.contacts
	display block


.address,
.social,
.contacts-form
	float left
.address
	width 446px
	width ratio-percentage(446,1344)
	+below(1100px)
		margin-bottom 10px
		width 100%
		float none
	p,
	a
		color #000000
		font-family $benderB
		font-size 25px
		line-height 40px
		+below(1701px)
			font-size 22px
	a
		text-decoration none
.social
	width 280px
	width ratio-percentage(280,1344)
	+below(1701px)
		width 200px
		width ratio-percentage(200,1344)
	+below(1100px)
		margin-bottom 10px
		float none
		width 100%
	&__item
		margin-bottom 6px
	&__link
		position relative
		padding-left 44px
		display block
		color #000000
		font-family $benderB
		font-size 25px
		line-height 40px
		text-decoration underline
		&:after
			position absolute
			content ""
			top 0
			left 0
		&:hover
			text-decoration none
		+below(1701px)
			font-size 22px
	&__item_fb
		.social__link
			&:after
				retinaSprite($fb_icon_group)
	&__item_vk
		.social__link
			&:after
				retinaSprite($vk_icon_group)
	&__item_youtube
		.social__link
			&:after
				retinaSprite($youtube_icon_group)

.contacts-form
	width 528px
	// width ratio-percentage(528,1344)
	font-size 0
	float right
	+below(1100px)
		width 100%
		clear both
	form
		clearfix()
	&_col
		width 292px
		float left
		+below(1100px)
			width 100%

		&:first-child
			margin-right 40px
			width 196px
			+below(1100px)
				width 100%
	&__field
		margin-bottom 2px
	&__input
		padding 8px
		border none
		width 100%
		height 38px
		background-color #e1e1e1
		color #959595
		font-family $benderB
		font-size 20px
		+placeholder()
			color #959595
	&__textarea
		padding 8px
		border none
		min-height 78px
		background-color #e1e1e1
		color #959595
		font-family $benderB
		font-size 20px
		+placeholder()
			color #959595
		+below(1100px)
			width 100%
	&__submit
		padding 8px
		border none
		width 206px
		height 38px
		background #e1e1e1 url('../images/general/submit-right.png') 100% 0 no-repeat
		color #959595
		font-family $benderB
		font-size 20px
		+below(1100px)
			width 100%
