include /../node_modules/bemto.jade/bemto
include /../node_modules/jade-injected/jade-injected
include ../page/page
include ../scripts/scripts

doctype html
html(lang='ru')
	include ../head/head
	+page._contacts
		block content
		+scripts(['https://api-maps.yandex.ru/2.1/?lang=ru_RU', 'jquery.min.js', 'app.min.js'])

		script.
			var myMap, myPlacemark, coords;

			ymaps.ready(init);

			// load myMap.
			function init() {
				var myMap = new ymaps.Map("map", {
					center: [55.864864, 37.501438],
					zoom: 16,
					type: "yandex#map", // yandex#satellite
					controls: [], // зум и геолокация
				}, {
					suppressMapOpenBlock: true, // убираем плашку "открыть в браузере"
					balloonPanelMaxMapArea: Infinity
					// dragInertia: false
				});
				myGeoObject = new ymaps.GeoObject({
					geometry: {
							type: "Point",// тип геометрии - точка
							coordinates: [55.864864, 37.501438] // координаты точки
						}
					});
				myMap.geoObjects.add(myGeoObject); // Размещение геообъекта на карте.

				}


